{
  // ================================
  // Apariencia general (Tema e iconos)
  // ================================
  "workbench.colorTheme": "Tokyo Storm Gogh",
  "workbench.statusBar.visible": false,
  "workbench.sideBar.location": "right",
  "workbench.editor.showTabs": "single",
  "workbench.editor.empty.hint": "hidden",
  "workbench.startupEditor": "none",
  "breadcrumbs.enabled": false,
  "material-icon-theme.hidesExplorerArrows": false,
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.indent": 8,
  "explorer.compactFolders": false,

  // ================================
  // Explorador de archivos
  // ================================
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,

  // ================================
  // Archivos y guardado
  // ================================
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // ================================
  // Editor
  // ================================
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.cursorBlinking": "expand",
  //"workbench.activityBar.location": "hidden",
  "editor.cursorSmoothCaretAnimation": "explicit",
  "editor.linkedEditing": true,
  "editor.guides.bracketPairs": true,
  "editor.glyphMargin": false,
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.overviewRulerBorder": false,
  "editor.fontSize": 16,
  "editor.fontFamily": "'FiraCode Nerd Font', 'Fira Code', Consolas, monospace",
  "editor.fontLigatures": true,
  "editor.smoothScrolling": true,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.tabSizing": "shrink",
  "editor.showFoldingControls": "mouseover",
  "editor.lineNumbers": "relative",
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.parameterHints.enabled": true,
  "editor.hover.enabled": true,
  "editor.matchBrackets": "always",
  "editor.selectionHighlight": true,

  // ================================
  // Terminal integrada
  // ================================
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.suggest.enabled": true,

  // ================================
  // Git
  // ================================
  "git.autofetch": true,
  "git.suggestSmartCommit": false,

  // ================================
  // Configuraciones por lenguaje
  // ================================
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ================================
  // Extensiones espec√≠ficas
  // ================================
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "tabnine.experimentalAutoImports": true,
  "python.createEnvironment.trigger": "off",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.location": "hidden"
}
