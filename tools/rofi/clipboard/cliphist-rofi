#!/usr/bin/env bash

if [ -z "$1" ]; then
  # Mostrar "Vaciar portapapeles" primero y luego el historial real
  {
    echo "ðŸ—‘  Vaciar portapapeles"
    cliphist list
  }
else
  if [[ "$1" == "ðŸ—‘  Vaciar portapapeles" ]]; then
    # Si selecciona la opciÃ³n extra, vaciar
    cliphist wipe
    notify-send "Clipboard" "Portapapeles vaciado ðŸ—‘"
  else
    # Selecciona entrada real -> copiar
    cliphist decode <<<"$1" | wl-copy
  fi
fi
